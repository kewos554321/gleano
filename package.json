{
  "name": "gleano",
  "version": "1.0.0",
  "private": true,
  "description": "A browser extension that captures subtitles from YouTube/Netflix and generates personalized learning content using AI",
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "sharp", "workerd"]
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage"
  },
  "keywords": [
    "language-learning",
    "chrome-extension",
    "youtube",
    "netflix",
    "ai"
  ],
  "author": "",
  "license": "MIT"
}
